if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 0.9em
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal

.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"

.tagcloud
  a
    margin-right: 5px
    display: inline-block

.subscribe
  max-width: 250px
  margin: 0 auto

  &__art-link
    float: left
    width: 100px
    max-width: 40%
    margin-right: 10px
    margin-bottom: 10px
    img
      max-width: 100%
      height: auto

  &__badge-link
    display: block
    text-align: center

  &__badge
    margin-top: 2px

  &__text
    color: color-default
    font-family: font-heading
    line-height: 1.2
    text-align: center

  &__podcatcher
    clear: both

  &__rss
    display: block
    width: 100%
    margin-top: 2px
    box-sizing: border-box
    padding: 5px
    border: 1px solid color-border
    color: color-sidebar-text
    font-size: 14px
    text-align: center

  @media screen and (min-width: 768px) and (max-width: 1037px)
    &__art-link
      float: none
      width: auto

    &__text
      font-size: 12px

    &__podcatcher
      margin-top: 15px
